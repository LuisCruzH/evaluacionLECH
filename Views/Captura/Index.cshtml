
@{
    ViewBag.Title = "Captura de prospecto";
}
<form style="margin-bottom:3rem;">
    <div class="row" style="margin-bottom:2rem;">
        <div class="col" style="text-align:center;">
            <h2>
                <i class="fas fa-user-edit"></i>&nbsp;&nbsp;Registro de Prospecto
            </h2>
        </div>
    </div>
    <div class="card">
        <div class="card-header">
            Datos generales
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-12 col-sm-6 col-md-4">
                    <label for="txtNombre" class="form-label">Nombre</label>
                    @Html.TextBox("nombreprospecto", null, new { @class = "form-control", @required = "true", @id = "txtNombre" })
                </div>
                <div class="form-group col-12 col-sm-6  col-md-4">
                    <label for="txtaPaterno" class="form-label">Apellido Paterno</label>
                    @Html.TextBox("aPaternoprospecto", null, new { @class = "form-control", @required = "true", @id = "txtaPaterno" })
                </div>
                <div class="form-group col-12 col-sm-6  col-md-4">
                    <label for="txtaMaterno" class="form-label">Apellido Materno</label>
                    @Html.TextBox("aMaternoprospecto", null, new { @class = "form-control", @required = "true", @id = "txtaMaterno" })
                </div>
                <div class="form-group col-12 col-sm-6  col-md-4">
                    <label for="txtRfc" class="form-label">RFC</label>
                    @Html.TextBox("rfcprospecto", null, new { @class = "form-control", @required = "true", @id = "txtRfc" })
                </div>
                <div class="form-group col-12 col-sm-6  col-md-4">
                    <label for="txtTelefono" class="form-label">Telefono</label>
                    @Html.TextBox("telefonoprospecto", null, new { @class = "form-control", @required = "true", @id = "txtTelefono" })
                </div>
            </div>
        </div>
        <div class="card-header" style="margin-top:2rem;">
            Dirección
        </div>
        <div class="card-body">
            <div class="row">
                <div class="form-group col-12 col-sm-6 col-md-4">
                    <label for="txtNombre" class="form-label">Calle</label>
                    @Html.TextBox("nombreprospecto", null, new { @class = "form-control", @required = "true", @id = "txtNombre" })
                </div>
                <div class="form-group col-12 col-sm-6  col-md-4">
                    <label for="txtaPaterno" class="form-label">Numero</label>
                    @Html.TextBox("aPaternoprospecto", null, new { @class = "form-control", @required = "true", @id = "txtaPaterno" })
                </div>
                <div class="form-group col-12 col-sm-6  col-md-4">
                    <label for="txtaMaterno" class="form-label">Colonia</label>
                    @Html.TextBox("aMaternoprospecto", null, new { @class = "form-control", @required = "true", @id = "txtaMaterno" })
                </div>
                <div class="form-group col-12 col-sm-6  col-md-4">
                    <label for="txtRfc" class="form-label">Codigo Postal</label>
                    @Html.TextBox("rfcprospecto", null, new { @class = "form-control", @required = "true", @id = "txtRfc" })
                </div>
            </div>
        </div>
        <div class="card-header" style="margin-top:2rem;">
            Documentos
        </div>
        <div class="card-body">
            <div class="row" style="margin-left:auto; margin-right:auto;">
                <div class="form-group col-12 col-sm-6 col-md-6">
                    <div style="margin-top:2rem;">
                        <input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
                    </div>
                </div>
                <div class="form-group col-12 col-sm-6  col-md-4">
                    <div style="margin-top:2rem;">
                        <a class="btn btn-outline-success" href="#">
                            <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
